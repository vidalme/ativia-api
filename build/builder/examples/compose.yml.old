version: "3"

services:
  service:
    build:
      context: .
      dockerfile: Dockerfile
    environment:
      DBHOST: "postgres"
      DBPORT: "5432"
      DBUSER: "admin"
      DBPASS: "qwe"
      DBNAME: "ativia-db"
      SSLMODE: "disable"
    volumes:
      - ../../:/src
    working_dir: "/src"
    depends_on:
      - postgres
    stdin_open: true
    tty: true
    ports:
      - "1323:1323"
    networks:
      - network

  postgres:
    image: postgres:13.3
    environment:
      POSTGRES_USER: "githubapi"
      POSTGRES_PASSWORD: "githubapi"
      POSTGRES_DBNAME: "githubapi"
    ports:
      - "5432:5432"
    volumes:
      - data:/var/lib/postgresql/data
    networks:
      - network

  pgadmin:
    image: dpage/pgadmin4
    environment:
      PGADMIN_DEFAULT_EMAIL: "andre@ativia.com"
      PGADMIN_DEFAULT_PASSWORD: "qwe"
    ports:
      - "6543:80"
    depends_on:
      - postgres
    networks:
      - network

volumes:
  data:

networks:
  network:
    driver: bridge